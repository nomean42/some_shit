            <label id="current_dir" style=".files.current_dir" />
            <listview id="directory_list" style=".files.listview" focusable="true">
                <columns style=".files.listview.columns">
                    <view style=".files.listview.fileimage" >
                        <imageview id="icon" style=".files.listview.fileimage.img"/>
