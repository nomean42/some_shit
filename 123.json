    <!-- MEDIAPLAYER -->
    <view id="mediaplayer">
        <view id="player_status_mark_play" style=".play_mark" visible="false"/>
        <view id="player_status_mark_pause" style=".pause_mark" visible="false"/>
        <view visible="false" id="mediaplayer_loading" style=".loading">
            <label text="Loading..." style=".loading.label"/>
            <imageview  image="waiting_animation"  style=".loading.image"  visible="false" />
        </view>
    </view>
    <view id="mediaplayer_files"  base="base_fullscreen_content" base_id="container" style =".files">
        <view style=".files.listblock">
            <label id="label_current_dir" style=".files.current_dir" />
            <label id="label_current_dir_path"  style=".files.current_path"  />
            <listview id="filelist" style=".files.listview" focusable="true">
                <columns style=".files.listview.columns">
                    <view style=".files.listview.fileimage" >
                        <imageview id="fileimage" style=".files.listview.fileimage.img"/>
                    </view>
                    <label style=".files.listview.filename" id="filename" />
                    <label  style=".files.listview.filesize" id="filesize" />
                </columns>
                <progressbar style=".files.listview.scroller">
                    <slider style=".files.listview.slider" />
                </progressbar>
            </listview>
            <view style=".files.infobar">
                <view style=".files.infobar.1line">
                    <label id="mediaplayer_file_format" />
                    <label id="mediaplayer_file_duration" />
                </view>
                <view  style=".files.infobar.2line">
                    <label  id="mediaplayer_file_video" />
                </view>
                <view  style=".files.infobar.3line">
                    <label id="mediaplayer_file_audio" />
                </view>
            </view>
        </view>
        <view id="waiting_animation">
            <imageview style=".files.waiting_animation" />
        </view>
    </view>
    <view id="mediaplayer_playback" visible="false" style=".playback">
        <digitalclock style=".playback.digitalclock" />
        <date style=".playback.date" />
        <view style =".playback.content">
            <view style=".playback.header">
                <label style=".playback.header.name" text="Mediaplayer"/>
            </view>
            <view style=".playback.now">
                <label id="label_playback_filename" style=".playback.now.filename"/>
                <label id="label_playback_lang" style=".playback.now.lang"/>
            </view>
            <view style=".playback.progress">
                <label id="label_playback_position" style=".playback.progress.position"/>
                <progressbar id="progress_mediaplayer"  focusable="true" style=".playback.progress.progress">
                    <slider style=".playback.progress.slider" />
                </progressbar>
                <label id="label_playback_position_left" style=".playback.progress.position_left" />
            </view>
        </view>
        <buttonhelper  style="base_buttonhelper" />
    </view>



    <!-- END MEDIAPLAYER -->

    <!-- DVR -->
    <view id="dvr">
        <view id="player_status_mark_play" style=".play_mark" visible="false"/>
        <view id="player_status_mark_pause" style=".pause_mark" visible="false"/>
        <view visible="false" id="dvr_loading" style=".loading">
            <label text="Loading..." style=".loading.label"/>
            <imageview  image="waiting_animation"  style=".loading.image"  visible="false" />
        </view>
    </view>
    <view id="dvr_directory"  base="base_fullscreen_content" base_id="container" style =".files">
        <imageview id="indexer_animation"  style=".files.indexer_status.image" />
        <view style=".files.listblock">
            <label id="label_current_dir" style=".files.current_dir" />
            <listview id="directory_list" style=".files.listview" focusable="true">
                <columns style=".files.listview.columns">
                    <view style=".files.listview.fileimage" >
                        <imageview id="icon" style=".files.listview.fileimage.img"/>
                    </view>
                    <label style=".files.listview.monthday" id="monthday" />
                    <label style=".files.listview.time" id="time" />
                    <label style=".files.listview.name" id="name" />
                    <label style=".files.listview.status" id="status" />
                </columns>
                <progressbar style=".files.listview.scroller">
                    <slider style=".files.listview.slider" />
                </progressbar>
                <view id="empty_message"></view>
            </listview>
            <view style=".files.infobar">
                <view style=".files.infobar.record" id="record_info">
                    <label style=".files.infobar.channel" id="record_channel" />
                    <label style=".files.infobar.name" id="record_name" />
                    <label style=".files.infobar.time" id="record_time" />
                </view>
                <view style=".files.infobar.indexer_status">
                    <label id="indexer_status"  style=".files.infobar.indexer_status.label"/>
                </view>
            </view>

        </view>
    </view>
    <view id="dvr_playback" visible="false" style=".playback">
        <digitalclock style=".playback.digitalclock" />
        <date style=".playback.date" />
        <view style =".playback.content">
            <view style=".playback.header">
                <label style=".playback.header.name" id="label_channel_name"/>
            </view>
            <view style=".playback.now">
                <label id="label_playback_name" style=".playback.now.name"/>
                <label id="label_playback_lang" style=".playback.now.lang"/>
            </view>
            <view style=".playback.progress">
                <label id="label_playback_position" style=".playback.progress.position"/>
                <progressbar id="progress_mediaplayer"  focusable="true" style=".playback.progress.progress">
                    <slider style=".playback.progress.slider" />
                </progressbar>
                <label id="label_playback_position_left" style=".playback.progress.position_left" />
            </view>
        </view>
        <buttonhelper  style="base_buttonhelper" />
    </view>



    <!-- END DVR -->

