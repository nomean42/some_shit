<?xml version="1.0" encoding="UTF-8"?>

<theme><layouts>

    <!-- MAIN MENU -->

    <!-- Window layout -->
    <view id="main_menu" style="base_fullscreen_content">
        <digitalclock style=".digitalclock" />
        <date style=".date" />
        <view id="cursor" style=".cursor" visible="false" />
        <view id="buttons" style=".buttons_block" />
        <imageview id="tvip_logo" style=".tvip_logo" />
        <imageview id="operator_logo" style=".operator_logo" />
    </view>

    <!-- One menu item layout -->
    <view id="mainmenu_item" style=".item">
        <imageview focusable="true" style=".item" />
        <label style=".item" />
    </view>

    <!-- END MAIN MENU -->

    <!-- Standby -->
    <view id="standby">
        <label text="Going to standby..." />
    </view>
    <!-- END Standby -->

    <!-- Browser -->
    <view id="browser">
        <view id="waiting_animation">
            <imageview style=".waiting_animation" />
        </view>
    </view>
    <!-- END Browser -->

    <!-- BASIC FULLSCREEN CONTENT STRUCTURE -->
    <view id="base_fullscreen_content" style="base_fullscreen_content">
        <digitalclock style="base_fullscreen_digitalclock" />
        <date style="base_fullscreen_date" />
        <view style=".container" id="container" />
        <buttonhelper style="base_buttonhelper" />
    </view>

    <view id="button_helper">
        <view style="button_helper_root">
            <view id="red_helper" style="button_helper_item">
                <view style="button_helper_icon_red" />
                <label style="button_helper_label" />
            </view>
            <view id="green_helper" style="button_helper_item">
                <view  style="button_helper_icon_green" />
                <label style="button_helper_label" />
            </view>
            <view id="yellow_helper" style="button_helper_item">
                <view  style="button_helper_icon_yellow" />
                <label style="button_helper_label" />
            </view>
            <view id="blue_helper" style="button_helper_item">
                <view  style="button_helper_icon_blue" />
                <label style="button_helper_label" />
            </view>
        </view>
    </view>



    <!-- TV PLAYER -->

    <view id="tvplayer">

        <!-- Timeshift mark -->
        <view id="timeshift_mark" visible="false" style=".timeshift_mark"></view>

        <!-- Play/pause marks -->
        <view id="player_status_mark_play" visible="false" style=".play_mark" />
        <view id="player_status_mark_pause" visible="false" style=".pause_mark"/>
    </view>

    <!-- Channels list -->
    <view id="iptv_channels"  base="base_fullscreen_content" base_id="container" style =".iptv_channels">
        <view style=".iptv_channels.favorite">
            <tabselect id="label_favorite_filter" style=".iptv_channels.favorite" />
        </view>
        <listview id="iptv_channellist" style=".iptv_channels.listview" focusable="true" precache_rows="8">
            <columns style=".iptv_channels.listview.columns">
                <label id="channel_number" style=".iptv_channels.listview.channel_number" />
                <!--<view style=".iptv_channels.listview.logo">
                  <imageview id="logo"  style=".iptv_channels.listview.logo.icon" />
                </view>-->
                <label id="channel_name"  style=".iptv_channels.listview.channel_name" />
                <label id="current_event"  style=".iptv_channels.listview.current_event" />
                <view style=".iptv_channels.listview.favorite">
                    <imageview id="favorite"  style=".iptv_channels.listview.favorite.icon" />
                </view>
                <view style=".iptv_channels.listview.sec_lock">
                    <imageview id="sec_lock"  style=".iptv_channels.listview.sec_lock.icon" />
                </view>
                <view style=".iptv_channels.listview.progress">
                    <progressbar id="current_event_progress" style=".iptv_channels.listview.event_progress" no_ui_blocks="true" />
                </view>
            </columns>
            <progressbar style=".iptv_channels.listview.scroller">
                <slider style=".iptv_channels.listview.slider" />
            </progressbar>
        </listview>
        <view style=".iptv_channels.infobar" id="channel_infobar">
            <view  style=".iptv_channels.infobar.logo">
                <imageview id="image_logo" style=".iptv_channels.infobar.logo.img" />
            </view>
            <view style=".iptv_channels.infobar.text">
                <view style=".iptv_channels.infobar.current_event">
                    <label id="label_current_program_time" style=".iptv_channels.infobar.time"/>
                    <label id="label_current_program_title"  style=".iptv_channels.infobar.title"/>
                </view>
                <label id="label_current_program_title_description" style=".iptv_channels.infobar.desc" />
                <view style=".iptv_channels.infobar.next_event">
                    <label id="label_next_program_time" style=".iptv_channels.infobar.time"/>
                    <label id="label_next_program_title" style=".iptv_channels.infobar.title"/>
                </view>
                <label id="label_next_program_description"   style=".iptv_channels.infobar.desc"/>
            </view>
        </view>
    </view>

    <view id="iptv_channels_preview"  base="base_fullscreen_content" base_id="container" style =".iptv_channels">
        <view style=".iptv_channels.favorite">
            <tabselect id="label_favorite_filter" style=".iptv_channels.favorite" />
        </view>
        <view style=".iptv_channels.preview_layout">
            <listview id="iptv_channellist" style=".iptv_channels.listview_preview" focusable="true" precache_rows="8">
                <columns style=".iptv_channels.listview.columns">
                    <label id="channel_number" style=".iptv_channels.listview.channel_number_preview" />
                    <!--<view style=".iptv_channels.listview.logo">
                      <imageview id="logo"  style=".iptv_channels.listview.logo.icon" />
                    </view>-->
                    <label id="channel_name"  style=".iptv_channels.listview.channel_name_preview" />
                    <view style=".iptv_channels.listview.favorite_preview">
                        <imageview id="favorite"  style=".iptv_channels.listview.favorite.icon" />
                    </view>
                    <view style=".iptv_channels.listview.sec_lock_preview">
                        <imageview id="sec_lock"  style=".iptv_channels.listview.sec_lock.icon" />
                    </view>
                </columns>
                <progressbar style=".iptv_channels.listview.scroller">
                    <slider style=".iptv_channels.listview.slider" />
                </progressbar>
            </listview>
            <view  style=".iptv_channels.preview_layout2">
                <view id="video_hole" style=".iptv_channels.video_window" >
                </view>
                <view style=".iptv_channels.infobar_preview" id="channel_infobar">
                    <view  style=".iptv_channels.infobar.logo">
                        <imageview id="image_logo" style=".iptv_channels.infobar.logo.img" />
                    </view>
                    <view style=".iptv_channels.infobar.text">
                        <view style=".iptv_channels.infobar.current_event">
                            <label id="label_current_program_time" style=".iptv_channels.infobar.time"/>
                            <label id="label_current_program_title"  style=".iptv_channels.infobar.title"/>
                        </view>
                        <label id="label_current_program_title_description" style=".iptv_channels.infobar.desc" />
                        <view style=".iptv_channels.infobar.next_event">
                            <label id="label_next_program_time" style=".iptv_channels.infobar.time"/>
                            <label id="label_next_program_title" style=".iptv_channels.infobar.title"/>
                        </view>
                        <label id="label_next_program_description"   style=".iptv_channels.infobar.desc"/>
                    </view>
                </view>
            </view>
        </view>

    </view>


    <!-- Channel epg -->
    <view id="iptv_channel_epg"  base="base_fullscreen_content" base_id="container"  style =".iptv_channel_epg">
        <view style=".iptv_channel_epg.header">
            <label id="label_channel_number"  style=".iptv_channel_epg.header.number"/>
            <label id="label_channel_title"   style=".iptv_channel_epg.header.title" />
        </view>
        <listview id="iptv_epglist" style=".iptv_channel_epg.listview"  focusable="true">
            <columns style=".iptv_channel_epg.listview.columns">
                <label id="weekday" style=".iptv_channel_epg.listview.weekday" />
                <label id="monthday" style=".iptv_channel_epg.listview.monthday" />
                <label id="daytime" style=".iptv_channel_epg.listview.daytime" />
                <label id="event_name" style=".iptv_channel_epg.listview.event_name" />
                <view style=".iptv_channel_epg.listview.record_mark">
                    <imageview style=".iptv_channel_epg.listview.record_mark.img" id="record_mark"/>
                </view>
            </columns>
            <progressbar style=".iptv_channel_epg.listview.scroller">
                <slider style=".iptv_channel_epg.listview.slider" />
            </progressbar>
        </listview>
    </view>

    <!-- One current epg event info -->
    <view id="iptv_epg_detailed"  base="base_fullscreen_content" base_id="container" style =".iptv_epg_detailed">
        <view style=".iptv_epg_detailed.header">
            <label id="label_channel_number" style=".iptv_epg_detailed.header.number" />
            <label id="label_channel_title" style=".iptv_epg_detailed.header.title"  />
        </view>
        <view style=".iptv_epg_detailed.event_times.view">
            <tabselect id="label_event_times" style=".iptv_epg_detailed.event_times" />
        </view>
        <view style=".iptv_epg_detailed.event_title.view">
            <label id="label_event_title"  style=".iptv_epg_detailed.event_title"/>
        </view>
        <view  style=".iptv_epg_detailed.event_length.view">
            <label id="label_event_length_name" style=".iptv_epg_detailed.event_length_name" text="Duration:" />
            <label id="label_event_length"  style=".iptv_epg_detailed.event_length" />
            <imageview id="record_mark" />
        </view>
        <view style=".iptv_epg_detailed.event_desc.view">
            <labelmultiline id="label_event_description" style=".iptv_epg_detailed.event_desc"/>
            <progressbar id="scrollbar_event_description" style=".iptv_epg_detailed.event_desc.progress" >
                <slider background="listview_scrollbar_scroller" style=".iptv_epg_detailed.event_desc.progress" />
            </progressbar>
        </view>
    </view>

    <!-- Channel switch info -->
    <view id="iptv_channel_info" visible="false"  style =".iptv_channel_info">
        <digitalclock style=".iptv_channel_info.digitalclock" />
        <date style=".iptv_channel_info.date" />
        <view style =".iptv_channel_info.content">
            <view style=".iptv_channel_info.header">
                <label id="label_channel_number" style=".iptv_channel_info.header.number" />
                <label id="label_channel_name" style=".iptv_channel_info.header.title" />
            </view>
            <view style=".iptv_channel_info.now">
                <label text="Now" style=".iptv_channel_info.now.name"/>
                <label id="label_current_program_title" style=".iptv_channel_info.now.title"/>
                <progressbar id="progressbar_current_program" style=".iptv_channel_info.now.time" />
                <label id="label_current_program_percent" style=".iptv_channel_info.now.percent"/>
                <label id="label_current_program_lang" style=".iptv_channel_info.now.lang"/>
            </view>
            <view  style=".iptv_channel_info.following">
                <label text="Following" style=".iptv_channel_info.following.name"/>
                <label id="label_next_program_title" style=".iptv_channel_info.following.title" />
                <label id="label_next_program_time" style=".iptv_channel_info.following.time" />
            </view>
            <view id="timeshift_progress" hidden="true" visible="false" style=".iptv_channel_info.timeshift_progress">
                <label id="timeshift_progress_label_min" style=".iptv_channel_info.timeshift_progress.min"/>
                <progressfield id="timeshift_progress_field"  focusable="true" style=".iptv_channel_info.timeshift_progress.progress">
                    <slider style=".iptv_channel_info.timeshift_progress.slider" />
                </progressfield>
                <label id="timeshift_progress_label_max" style=".iptv_channel_info.timeshift_progress.max" />
            </view>
        </view>
        <buttonhelper  style="base_buttonhelper" />
    </view>

    <view id="iptv_channel_numfield_window" visible="false" style=".channel_number">
        <textfield mode="number" max_chars="3" id="iptv_channel_numfield"  style=".channel_number.field" />
    </view>

    <view id="iptv_no_channels" visible="false" style=".status">
        <labelmultiline text="Waiting for a channel list." style=".status.label" />
    </view>

    <!-- END TV PLAYER -->

    <!-- PREFERENCES -->
    <view id="preferences" base="base_fullscreen_content" base_id="container">
        <view id="preferences_main" style=".main">
            <label text="Settings" style=".title" />
            <view style=".pref_container">
                <view navigation_table_looped="1" id="level_1" style=".level1">
                    <label style=".level1.item.system,preferences.l1_item" text="System" id="pref_system" params="prefid=pref_system_ helpid=pref_system_root"/>
                    <label style=".level1.item.appearance,preferences.l1_item"  text="Appearance" id="pref_appearance" params="prefid=pref_appearance_ helpid=pref_appearance_root"/>
                    <label style=".level1.item.network,preferences.l1_item" text="Network" id="pref_network" params="prefid=pref_network_ helpid=pref_network_root"/>
                    <label style=".level1.item.display,preferences.l1_item" text="Display" id="pref_display" params="prefid=pref_display_ helpid=pref_display_root"/>
                    <label style=".level1.item.tv,preferences.l1_item" text="TV" id="pref_tv" params="prefid=pref_tv_ helpid=pref_tv_root"/>
                    <label style=".level1.item.security,preferences.l1_item" text="Security" id="pref_security" params="prefid=pref_security_ helpid=pref_security_root"/>
                </view>
                <view id="level_2" style=".level2">

                    <view style=".level2.container">
                        <view> <!--BEGIN pref content-->
                            <view style=".level2.block" id="pref_system_" navigation_table_looped="true" visible="false">
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_system_language">
                                    <label style=".level2.item.label" text="System language:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_language" focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_system_updatetype">
                                    <label  style=".level2.item.label" text="Update type:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_updatetype" focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_system_updateperiod">
                                    <label  style=".level2.item.label" text="Check updates:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_updateperiod" focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_system_updatebackground">
                                    <label  style=".level2.item.label" text="Install background updates:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_updatebackground" focusable="true"/>
                                </view>
                                <view  style=".level2.item,preferences.l2_item" params="helpid=pref_system_timezone">
                                    <label  style=".level2.item.label" text="Timezone:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_timezone" focusable="true"/>
                                </view>
                                <view  style=".level2.item,preferences.l2_item"  params="helpid=pref_system_timeserver">
                                    <label  style=".level2.item.label" text="NTP server address:"/>
                                    <textfield style=".level2.item.field" ext_keyboard="true"  id="pref_system_timeserver" focusable="true" text_halign="left" regexp="^((((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))$|^(([a-zA-Z0-9]([a-zA-Z0-9\-]{0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,6}))+$|^$"/>
                                </view>
                                <view  style=".level2.item,preferences.l2_item" params="helpid=pref_system_audiolanguage">
                                    <label  style=".level2.item.label" text="Default audio language:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_audiolanguage" focusable="true"/>
                                </view>
                                <view  style=".level2.item,preferences.l2_item" params="helpid=pref_system_digitalsoundmode">
                                    <label  style=".level2.item.label" text="Digital sound output:"/>
                                    <tabselect style=".level2.item.field" id="pref_system_digitalsoundmode" focusable="true"/>
                                </view>
                                <view style=".level2.button_block">
                                    <keybutton  id="pref_system_button_info" text="Info" />
                                    <keybutton  id="pref_system_button_ossetup" text="OS Settings" />
                                    <keybutton id="pref_system_button_checkupdates" text="Check updates now"/>
                                    <keybutton id="pref_system_button_cancel" text="Cancel"/>
                                </view>
                            </view>

                            <view style=".level2.block" id="pref_appearance_" navigation_table_looped="true" visible="false">
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_appearance_alpha">
                                    <label style=".level2.item.label" text="UI transparency:"/>
                                    <progressfield id="pref_appearance_alpha"  style=".level2.item.field"  focusable="true">
                                        <slider style=".level2.item.field.slider" />
                                    </progressfield>
                                </view>
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_appearance_anim">
                                    <label style=".level2.item.label" text="UI animations:"/>
                                    <tabselect style=".level2.item.field" id="pref_appearance_anim"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_appearance_listlooped">
                                    <label style=".level2.item.label" text="Looped list scrolling:"/>
                                    <tabselect style=".level2.item.field" id="pref_appearance_listlooped"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_appearance_padding">
                                    <label style=".level2.item.label" text="TV overscan:"/>
                                    <tabselect style=".level2.item.field" id="pref_appearance_padding"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_appearance_tv_preview_mode">
                                    <label style=".level2.item.label" text="TV channel list with preview:"/>
                                    <tabselect style=".level2.item.field" id="pref_appearance_tv_preview_mode"  focusable="true"/>
                                </view>
                                <view style=".level2.button_block">
                                    <keybutton id="pref_appearance_button_cancel" text="Cancel" />
                                </view>

                            </view>

                            <view style=".level2.block" id="pref_tv_" visible="false" navigation_table_looped="true">
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_tv_streamtype">
                                    <label style=".level2.item.label" text="Stream source:"/>
                                    <tabselect style=".level2.item.field" id="pref_tv_streamtype"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_tv_udpxyaddress">
                                    <label style=".level2.item.label" text="UDPXY server:"/>
                                    <textfield style=".level2.item.field" ext_keyboard="true" id="pref_tv_udpxyaddress"  focusable="true" regexp="^(http://)?(([A-Za-z0-9_]+):(.+)@)?((((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))|(([a-zA-Z0-9]([a-zA-Z0-9\-]{0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,6}))+(:(6553[0-5]|655[0-2][0-9]|65[0-4][0-9]{2}|6[0-4][0-9]{3}|[1-5][0-9]{4}|[1-9][0-9]{0,3}))$" />
                                </view>
                                <view style=".level2.item,preferences.l2_item"  params="helpid=pref_tv_mpegts_buffer">
                                    <label style=".level2.item.label" text="MPEG-TS buffering, msec:"/>
                                    <tabselect style=".level2.item.field" id="pref_tv_mpegts_buffer"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_tv_dvr_deviceid">
                                    <label style=".level2.item.label" text="DVR storage:"/>
                                    <textfield style=".level2.item.field" id="pref_tv_dvr_deviceid"  focusable="true" />
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_tv_timeshift_deviceid">
                                    <label  style=".level2.item.label" text="Timeshift storage:"/>
                                    <textfield style=".level2.item.field" id="pref_tv_timeshift_deviceid"  focusable="true"/>
                                </view>
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_tv_autotimeshift">
                                    <label  style=".level2.item.label" text="Auto-timeshifting:"/>
                                    <tabselect style=".level2.item.field" id="pref_tv_autotimeshift"  focusable="true" />
                                </view>
                                <view style=".level2.item,preferences.l2_item">
                                    <label  style=".level2.item.label" text="Content source:"/>
                                    <tabselect style=".level2.item.field" id="pref_tv_middleware" text="TVIP Middleware"   focusable="true"/>
                                </view>
                                <view style=".level2.button_block">
                                    <keybutton id="pref_tv_button_midd_setup" text="" />
                                    <keybutton id="pref_tv_button_cancel" text="Cancel"/>
                                </view>
                            </view>

                            <view style=".level2.block" id="pref_network_" visible="false" navigation_table_looped="true">
                                <view style=".level2.item,preferences.l2_item" params="helpid=pref_network_iface">
                                    <label  style=".level2.item.label" text="Network interface:"/>
                                    <tabselect style=".level2.item.field" id="pref_network_iface"  focusable="true"/>
                                </view>
                                <view layout="vertical" id="iface_config">
                                    <view style=".level2.item,preferences.l2_item">
                                        <label  style=".level2.item.label" text="MAC address:"/>
                                        <label style=".level2.item.field" id="pref_network_mac_show"  focusable="true"/>
                                    </view>
                                    <view style=".level2.item,preferences.l2_item"  params="helpid=pref_network_wlan_ssid" hidden="true">
                                        <label  style=".level2.item.label" text="WiFi network:"/>
                                        <label  style=".level2.item.field" id="pref_network_wlan_ssid" text="Not selected"  focusable="true"/>
                                    </view>
                                    <view style=".level2.item,preferences.l2_item"   params="helpid=pref_network_config">
                                        <label  style=".level2.item.label" text="IP setup:"/>
                                        <tabselect style=".level2.item.field" id="pref_network_config"  focusable="true"/>
                                    </view>
                                    <view>
                                        <view id="static_ip_config" layout="vertical">
                                            <view style=".level2.item,preferences.l2_item">
                                                <label  style=".level2.item.label" text="IP address:"/>
                                                <ipaddressinputfield style=".level2.item.field" id="pref_network_ip"  focusable="true"/>
                                            </view>
                                            <view style=".level2.item,preferences.l2_item">
                                                <label  style=".level2.item.label" text="Netmask:"/>
                                                <ipaddressinputfield style=".level2.item.field" id="pref_network_mask"  focusable="true" />
                                            </view>
                                            <view style=".level2.item,preferences.l2_item">
                                                <label  style=".level2.item.label" text="Gateway:"/>
                                                <ipaddressinputfield style=".level2.item.field" id="pref_network_gateway"  focusable="true"/>
                                            </view>
                                            <view style=".level2.item,preferences.l2_item">
                                                <label  style=".level2.item.label" text="DNS 1:"/>
                                                <ipaddressinputfield style=".level2.item.field" id="pref_network_dns1"  focusable="true"/>
                                            </view>
                                            <view style=".level2.item,preferences.l2_item">
                                                <label  style=".level2.item.label" text="DNS 2:"/>
                                                <ipaddressinputfield style=".level2.item.field" id="pref_network_dns2"  focusable="true"/>
                                            </view>
                                        </view>
                                        <view id="dynamic_ip_show" layout="vertical">
                                            <view style=".level2.item,preferences.l2_item" focusable="false">
