                <progressbar style=".files.listview.scroller">
                    <slider style=".files.listview.slider" />
                </progressbar>
                <view id="empty_message"></view>
            </listview>
        </view>
    </view>
    <view id="cctv_playback" visible="false" style=".playback">
        <digitalclock style=".playback.digitalclock" />
